<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivityFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/joke_card_margin_top"
        android:layout_marginBottom="@dimen/joke_card_margin_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/instructions_text_view"
                android:text="@string/header"
                android:textSize="@dimen/h6_text_size"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/joke_header_top_margin"
                android:layout_marginBottom="@dimen/joke_header_bottom_margin"
                android:layout_marginLeft="@dimen/text_initial_margin"
                android:layout_marginRight="@dimen/text_ending_margin"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seprator">
            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/joke_content_textview"
                android:text="@string/instructions"
                android:layout_marginTop="@dimen/joke_content_top_margin"
                android:layout_marginBottom="@dimen/joke_content_bottom_margin"
                android:layout_marginLeft="@dimen/text_initial_margin"
                android:layout_marginRight="@dimen/text_ending_margin"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/seprator">
            </View>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/button_one"
                android:text="@string/button_one_text"
                android:textColor="@color/white"
                android:background="@drawable/button_shape"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
